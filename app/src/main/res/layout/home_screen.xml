<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <SearchView
                android:id="@+id/search"
                android:layout_width="263dp"
                android:layout_height="match_parent"
                android:visibility="visible"
                tools:visibility="visible" />

            <Button
                android:id="@+id/button2"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="Обновить вакансии"
                android:textSize="12dp"
                android:visibility="visible" />

        </LinearLayout>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginVertical="15dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="#3E86FA"
        android:clickable="true"
        android:color="@color/colorPrimary"
        fab:srcCompat="@android:drawable/ic_input_add" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_vacancy"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginVertical="85dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="#3E86FA"
        android:clickable="true"
        android:visibility="invisible"
        fab:rippleColor="#FFFFFF"
        fab:srcCompat="@drawable/add_vacancy_icon" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_company"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginVertical="155dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="#3E86FA"
        android:clickable="true"
        android:visibility="invisible"
        fab:rippleColor="#FFFFFF"
        fab:srcCompat="@drawable/add_company_icon" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_resume"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginVertical="225dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="#3E86FA"
        android:clickable="true"
        android:visibility="invisible"
        fab:rippleColor="#FFFFFF"
        fab:srcCompat="@drawable/add_resume_icon" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/delete"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginVertical="15dp"
        android:layout_marginRight="95dp"
        android:backgroundTint="#3E86FA"
        android:clickable="true"
        fab:rippleColor="#FFFFFF"
        fab:srcCompat="@drawable/delete_button_icon" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/delete_vacancy"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginVertical="85dp"
        android:layout_marginRight="95dp"
        android:backgroundTint="#3E86FA"
        android:clickable="true"
        android:visibility="invisible"
        fab:rippleColor="#FFFFFF"
        fab:srcCompat="@drawable/delete_vacancy_icon" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/delete_company"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginVertical="155dp"
        android:layout_marginRight="95dp"
        android:backgroundTint="#3E86FA"
        android:clickable="true"
        android:visibility="invisible"
        fab:rippleColor="#FFFFFF"
        fab:srcCompat="@drawable/delete_company_icon" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/delete_resume"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginVertical="225dp"
        android:layout_marginRight="95dp"
        android:backgroundTint="#3E86FA"
        android:clickable="true"
        android:visibility="invisible"
        fab:rippleColor="#FFFFFF"
        fab:srcCompat="@drawable/delete_resume_icon" />



</FrameLayout>

