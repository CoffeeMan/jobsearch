<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/Search"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:hint="Search vacanсy">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/button2"
                android:layout_width="110dp"
                android:layout_height="match_parent"
               android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:text="Обновить вакансии"
                android:visibility="visible" />

        </LinearLayout>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_vacation"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:backgroundTint="#3E86FA"
        android:src="@drawable/add_vacation_icon"
        fab:rippleColor="#2196F3" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:id="@+id/add_company"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginVertical="15dp"

        android:layout_marginRight="80dp"
        android:backgroundTint="#3E86FA"
        android:src="@drawable/add_company_icon"
        android:tint="#FDFDFD"
        fab:backgroundTint="#F3F3F3"
        fab:fabSize="auto"
        fab:rippleColor="#2196F3" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton

        android:id="@+id/delete_company"
        style="@style/AppTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginVertical="15dp"

        android:layout_marginRight="140dp"
        android:backgroundTint="#3E86FA"
        android:src="@drawable/delete_vacancy"
        android:tint="#FDFDFD"
        fab:backgroundTint="#F3F3F3"
        fab:fabSize="auto"
        fab:rippleColor="#2196F3" />


</FrameLayout>

